generator client {
  provider = "prisma-client"
  output = "./generated/prisma"
 
}

datasource db {
  provider = "mysql"

}

model User {
  id              Int              @id @default(autoincrement())
  email           String           @unique
  password        String
  name            String
  role            Role             @default(USER)
  Preferences     Preferences?
  ingredients     Ingredient[]
  favoriteRecipe  FavoriteRecipe[]
}

enum Role{
  USER
  FARMER
  NUTRITIONIST
}

  model Preferences {
  id         Int     @id @default(autoincrement())
  userId     Int     @unique
  allergies  String?
  dislikes   String?
  conditions String?
  user       User    @relation(fields: [userId], references: [id])
}

model Ingredient {
  id         Int    @id @default(autoincrement())
  name       String
  quantity   Float
  unit       String
  category   String
  expiresAt  DateTime
  userId     Int
  user       User   @relation(fields: [userId], references:[id])
}

model FavoriteRecipe {
  id        Int     @id @default(autoincrement())
  recipeId  Int
  title     String
  image     String
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
}
